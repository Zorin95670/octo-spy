<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0"
	xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	<persistence-unit name="JPA-OCTO-TEST">
		<class>com.octo.model.entity.Environment</class>
		<class>com.octo.model.entity.Deployment</class>
		<class>com.octo.model.entity.LastDeploymentView</class>
		<class>com.octo.model.entity.DeploymentView</class>
		<class>com.octo.model.entity.Project</class>
		<class>com.octo.model.entity.ProjectView</class>
		<class>com.octo.model.entity.Group</class>
		<class>com.octo.model.entity.ProjectGroup</class>
		<class>com.octo.model.entity.DeploymentProgress</class>
		<class>com.octo.helpers.EntityHelpers</class>
		<properties>
			<property name="hibernate.show_sql" value="false" />
			<property name="hibernate.format_sql" value="false" />
      		<property name="hibernate.hbm2ddl.auto" value="create-drop"/>
		</properties>
	</persistence-unit>
</persistence>